# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 spaces indentation
[*.js]
indent_style = space
indent_size = 4

# Matches the exact files named 'package.json'
[package.json]
indent_style = space
indent_size = 2

# Matches any files named '.editorconfig'
[**.editorconfig]
indent_style = space
indent_size = 2
